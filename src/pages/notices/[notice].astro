---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Astro/sections/Footer.astro";
import { src } from "../../data/mapaFooter.js";
import { notices } from "../../data/notices.js";
import Header from "../../components/React/header";
import Noticia from "../../components/Astro/sections/Noticia.astro";

const { notice } = Astro.params;

const info = notices.find((noti) => noti.id == notice);
---

<Layout title={info.title}>
  <Header
    about={"/#Sobre-nosotros"}
    contact={"/#Contacto"}
    home={"/"}
    notices={"/Noticias"}
    lastNotices={"#Ultimas-noticias"}
    testimonios={"/#Testimonio"}
    equipo={"/#Equipo"}
    areasLaborales={"#Areas-laborales"}
    client:load
  />
  <Noticia info={info} />
  <Footer srcMaps={src} />
</Layout>

<style is:global>
  :root {
    /* variables header principal  */
    --span-menu-hamb: rgb(255, 255, 255);
    --a-menu-hamb: rgb(255, 255, 255);
    --background-nav: grey;

    /* background gradient main */
    --firstvalue: rgba(8, 8, 8, 0.8);
    --secondvalue: rgba(45, 62, 158, 0.5);

    /* padding sections */
    --paddingsection-inline: 20px;

    /* subtitulos */

    --subtitlesection: 1.7em;
    --paddingsubtilteSection: 20px 30px;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Roboto", sans-serif;
    list-style: none;
    text-decoration: none;
    scroll-behavior: smooth;
  }
</style>
