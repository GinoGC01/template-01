---
import Header from "../components/React/header";
import Layout from "../layouts/Layout.astro";
import { Search } from "../Icons/Search.jsx";
import SectionNotices from "../components/React/SectionNotices.jsx";
---

<Layout title="Noticias">
  <Header
    about={"/#Sobre-nosotros"}
    contact={"/#Contacto"}
    home={"/"}
    notices={"/Noticias"}
    lastNotices={"/#Ultimas-noticias"}
    testimonios={"/#Testimonios"}
    equipo={"/#Equipo"}
    areasLaborales={"/#Areas-laborales"}
    client:load
  />

  <SectionNotices client:load />
</Layout>

<style is:global>
  :root {
    /* variables header principal  */
    --span-menu-hamb: rgb(255, 255, 255);
    --a-menu-hamb: rgb(255, 255, 255);
    --background-nav: grey;

    /* background gradient main */
    --firstvalue: rgba(8, 8, 8, 0.8);
    --firstvalue1: rgba(8, 8, 8, 0.8);
    --secondvalue: rgba(45, 62, 158, 0.5);
    --secondvalue08: rgba(45, 62, 158, 0.8);

    /* padding sections */
    --paddingsection-inline: 20px;
    --paddingsection-inline-desktop: 200px;

    /* subtitulos */

    --subtitlesection: 1.7em;
    --subtitlesection-desk: 2em;
    --paddingsubtilteSection: 20px 30px;
    --paddingsubtilteSection-desk: 50px;

    /* animated */
    --animate-delay: 0.3s;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Roboto", sans-serif;
    list-style: none;
    text-decoration: none;
    scroll-behavior: smooth;
  }

  section {
    padding-top: 100px;
  }
</style>
