---
import { Arrow } from "../../../Icons/arrow";

interface Props {
  sectionID: string;
}

const { sectionID } = Astro.props;
---

<!-- componente ancor -->
<span class="back">
  <a href={sectionID}><Arrow /></a>
</span>

<style>
  .back {
    position: absolute;
    top: 5.2em;
    left: 0.5em;
    width: 2.5em;
    height: 2.5em;
    z-index: 1000;
  }

  .back a {
    display: block;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transform: rotate(180deg);
    font-size: 1.5em;
    border-radius: 50%;
    border: 1px solid white;
  }
</style>
