<style>
  ul {
    position: absolute;
    top: 5.5em;
    left: 0.5em;
    width: 2.5em;
    height: 2.5em;
    z-index: 1000;
    display: flex;
    flex-direction: column;
    gap: 0.8em;
  }

  ul a {
    display: block;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5em;
    height: 1.7em;
    width: 1.7em;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(10px);
  }
