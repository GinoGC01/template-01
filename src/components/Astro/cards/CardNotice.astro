---
import CallToActions from "../ancors/callToActions.astro";
interface Props {
  id: string;
  title: string;
  category: string;
  synthesis: string;
  images: any;
  date: string;
}

const { title, category, synthesis, images, date, id } = Astro.props;
---

<article id={id}>
  <header>
    <h4>{title}</h4>
    <span>{date}</span>
  </header>
  <div>
    <figure>
      <img
        src={images[0]}
        alt=`imÃ¡gen sobre ${title}`
        transition:name={`image-${images[0]}`}
        loading="lazy"
      />
    </figure>
    <span>TEMA | <b>{category}</b></span>
    <p>{synthesis}</p>
    <div class="button-cta">
      <CallToActions
        blank={false}
        link={`/notices/${id}`}
        text="Ver mas"
        styles={true}
        color="#fff"
        background="rgba(0, 0, 0, 0.5)"
      />
    </div>
  </div>
</article>

<style>
  article {
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 0.5em;
    padding: 15px 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  }
  article header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  article span {
    font-weight: 200;
    font-size: 0.8em;
  }

  article > div > span {
    width: 100%;
    text-align: start;
    padding-block: 3px;
  }

  article div {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5em;
  }

  article div p {
    width: 100%;
    text-align: left;
  }

  article div figure {
    width: 100%;
  }

  article img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (width >= 700px) {
    article div figure {
      height: 25em;
    }
  }
</style>
