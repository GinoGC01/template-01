---
import { Arrow } from "../../../Icons/arrow"

const {message, url, image} = Astro.props
---

<div style={`background: linear-gradient(
          0deg,
          rgba(255, 255, 255, 0.7) 0%,
          rgba(255, 255, 255, 1) 100%
        ),
        url(${image});
        background-repeat: no-repeat;
        background-position: 15% 50%;
        background-size: cover;`}>
    <a href={url}>
      <span class="content">{message}</span>
      <span class="arrow">
        <Arrow />
      </span>
      <span class="bg" />
    </a>
  </div>

  <style>
    div{
        display: none;
    }

    @media(width > 700px){
        div{
      display: block;
      width: 100%;
      height: 100%;
      margin-top: 20px;
      

      border-radius: 20px;
    }

    a {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100%;
      width: 100%;
      border-radius: 20px;
      font-weight: 400;
    }

    a:hover .bg {
      filter: grayscale(1);
      background-color: rgba(0, 0, 0, 0.2);
      border: none;
    }

    a:hover .content,
    a:hover .arrow {
      font-size: 3em;
      color: rgb(255, 255, 255);
    }

    a:hover .arrow {
      transform: translate(20px, 8px);
    }

    .content,
    .arrow {
      position: relative;
      z-index: 1000;
      font-size: 2em;
      font-weight: 200;
      transition: font-size 0.2s;
      color: grey;
    }

    .arrow {
      transform: translate(0, 6px);
      transition:
        translateY 0.2s,
        translateX 0.2s 0.2s;
    }

    .bg {
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      border-radius: 20px;
      border: 1px solid rgba(128, 128, 128, 0.3);
      transition:
        filter 0.2s,
        background-color 0.2s,
        scale 0.2s;
    }
    }
  </style>